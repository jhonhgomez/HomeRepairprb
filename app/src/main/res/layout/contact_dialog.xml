<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/callContact"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_call"
        android:layout_width="?android:attr/listPreferredItemHeightSmall"
        android:layout_height="?android:attr/listPreferredItemHeightSmall"
        android:layout_margin="5dp" />

    <TextView
        android:id="@+id/txtTelContacto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:inputType="number"
        android:gravity="center_vertical"
        android:text="Call"
        android:layout_toRightOf="@id/callContact"
        android:layout_alignTop="@id/callContact"
        android:layout_alignBottom="@id/callContact"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:clickable="true"
        android:onClick="call"
        android:textColor="@color/welcomeButton"/>

</RelativeLayout>